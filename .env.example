MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority
MONGODB_DB=showplot
PORT=5050
# Allow both the user app (5173) and the admin app (5174) in dev
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# Google Sign-In (required for go-live)
GOOGLE_CLIENT_ID=YOUR_GOOGLE_OAUTH_WEB_CLIENT_ID

# Session signing secret (required)
SESSION_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_STRING

# Frontend env (Vite)
VITE_GOOGLE_CLIENT_ID=YOUR_GOOGLE_OAUTH_WEB_CLIENT_ID

# Admin frontend: where the user app lives (used for the "Open Builder" link)
VITE_USER_APP_ORIGIN=http://localhost:5173
